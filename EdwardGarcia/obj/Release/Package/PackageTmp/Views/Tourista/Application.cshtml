    function clearMarker() {
        if (markerAutoLocation != undefined) {
            map.removeLayer(markerAutoLocation);
            try {
                map.removeLayer(markerAutoLocation);
            }
            catch (any) {
                console.log(markerToParameterLatitude)
            }
        };

